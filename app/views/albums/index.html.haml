%h2 
  Albums
  .right= link_to 'New Album', new_album_path, :class => :button

%table
  %thead
    %th Name
    %th Artist
    %th Year
    %th Actions

  %tbody
    -@albums.each do |album|
      %tr
        %td= album.name
        %td= album.artist.name
        %td= album.year
        %td
          =link_to 'Edit', edit_album_path(album)
          |
          =link_to 'Destroy', album_path(album), :method => :delete
